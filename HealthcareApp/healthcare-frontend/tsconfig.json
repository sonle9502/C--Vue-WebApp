{
  "compilerOptions": {
    "target": "esnext",                    
    "module": "esnext",                    
    "moduleResolution": "node",
    "strict": true,                        
    "jsx": "preserve",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]                     
    },
    "types": ["vite/client"]               
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
